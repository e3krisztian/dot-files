general {
        colors = true
        color_good = "#BBBBBB"
        color_bad = "#CC1616"
        color_degraded = "#55858E"
        interval = 5
}

order += "volume master"
# order += "ipv6"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "tztime local"

volume master {
        format = " â™ª: %volume "
        format_muted = " â™ª: muted (%volume) "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        # termsyn font
        #format = "Ã€ %volume "
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

battery 0 {
        format = "%status %percentage %remaining (%emptytime %consumption)"
        last_full_capacity = true
        hide_seconds = true
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? AC"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT0/uevent"
        low_threshold = 30
        threshold_type = time
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "LOAD %1min"
}

disk "/" {
        format = "/: %avail"
}

cpu_usage {
        format = "CPU %usage "
        max_threshold = 75
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
        max_threshold = 65
        path = "/sys/class/thermal/thermal_zone0/temp"
}
cpu_temperature 1 {
        format = "T: %degrees Â°C"
        max_threshold = 65
        path = "/sys/class/thermal/thermal_zone1/temp"
